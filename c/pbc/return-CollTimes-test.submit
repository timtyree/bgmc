Universe = vanilla
Requirements = (TARGET.Arch == "X86_64") && (HAS_MODULES =?= True) && (OSGVO_OS_STRING == "RHEL 7")

executable = xrun.sh
arguments = $(r) $(D) $(L) $(kappa) $(niter) $(Process)

transfer_input_files = return_CollTimes.x

output = Log/job.out.$(Cluster).$(Process)
error = Log/job.error.$(Cluster).$(Process)
log = Log/job.log.$(Cluster).$(Process)

request_cpus = 1
request_memory = 10 MB
request_disk = 50 MB

PeriodicRelease = ( (CurrentTime - EnteredCurrentStatus) > $RANDOM_INTEGER(3000, 3300, 100) ) && ((NumJobStarts < 4))
queue r D L kappa niter from runs/run_test.dat
